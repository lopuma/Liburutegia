<!--Modal para CRUD-->
<div id="modalBOOK" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalBOOKLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalBOOKLabel"></h5>
      </div>
      <div class="New">
        <form class="New-form" id="formu">
          {{> formNewBook}}
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" tabindex="10">Cancel</button>
            <button type="submit" id="btnGuardar" class="btn btn-dark" tabindex="11">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

