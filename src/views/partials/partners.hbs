          <label for="" class="col-form-label">PHONE 1</label>
          <input id="phone1" type="text" class="form-control">

          <label for="" class="col-form-label">PHONE 2</label>
          <input id="phone2" type="text" class="form-control">
          
          <label for="" class="col-form-label">E-MAIL</label>
          <input id="email" type="text" class="form-control">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" id="btnGuardar" class="btn btn-dark">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

