{{#if messageSuccess}}
<div id="alertLogin" class="alert alert-message alert-success alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">Well done!</h4>
  {{messageSuccess}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if messageUpdate}}
<div id="alertLogin" class="alert alert-message alert-primary alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">Well done!</h4>
  {{messageUpdate}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if messageDelete}}
<div id="alertLogin" class="alert alert-message alert-warning alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">Well done!</h4>
  {{messageDelete}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if message}}
<div id="alertLogin" class="alert alert-message alert-success alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">Well done!</h4>
  {{message}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if errorMessage}}
<div id="alertNotLogin" class="alert alert-message alert-danger alert-dismissible fade show" role="alert">
  <div class="alert-headers">
    <h4 class="alert-heading">Something went wrong.</h4>
  </div>
  <hr>
{{errorMessage}}
  <button id="btnCloseAlert" type="button" class="close" data-dismiss="alert" aria-label="Close"><span
      aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if errorValidation}}
<div id="alertNotLogin" class="errorValidation alert alert-message alert-warning alert-dismissible fade show" role="alert">
  <div class="alert-headers">
    <h4 class="alert-heading">Something went wrong.</h4>
  </div>
  <hr>
{{#each errorValidation}}
{{this.msg}}
{{/each}}
  <button id="btnCloseAlert" type="button" class="close" data-dismiss="alert" aria-label="Close"><span
      aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if error_msg_exist}}
<div id="alertNotLogin" class="alert alert-message alert-danger alert-dismissible fade show" role="alert">
  <div class="alert-headers">
