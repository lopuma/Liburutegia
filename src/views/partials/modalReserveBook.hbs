                                            <option></option>
                                        </select>
                                        <label class="Animation-label" for="inputTitle">Title *</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="New-boxes">
                            <!-- TODO PARTNER ID -->
                            <div class="Input-box">
                                <div class="Box">
