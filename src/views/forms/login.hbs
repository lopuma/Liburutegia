<!-- Login.component.hbs -->
<div class="Authentication" id="stateLogin">
  <input type="checkbox" id="flip">


  <div class="Auth-cover">
    <div class="Auth-cover--front">
      <img class="Auth-img" loading="lazy" src="image/front.svg" alt="">
    </div>
    <div class="Auth-cover--back">
      <img class="Auth-img" loading="lazy" src="image/back.svg" alt="">
    </div>
  </div>

  <form class="Login" action="/login" method="POST" id="formLogin">
    {{> messages}}

    <div class="Login-content">
      <div class="Login-title">Login</div>
      <div class="Input-boxes">
        <div class="Input-box">
          <i id="icon-logo" class="Box-i fa-solid fa-envelope"></i>
          <input class="Box-input" id="email" type="email" name="email" autocomplete="email" required="required"
            autofocus />
          <label for="email" class="Input-label">Enter your Email</label>
        </div>
        <div class="Input-box">
          <i id="icon-logo" class="Box-i fa-solid fa-key"></i>
          <input class="Box-input" name="password" id="password" type="password" autocomplete="false" required="required" readonly onfocus="this.removeAttribute('readonly');" />
          <label for="email" class="Input-label">Enter your Password</label>
          <i id="icon-eye" class="Box-i fa-solid fa-eye"></i>
        </div>
        <div class="Input-box">
          <label class="Box-label" for="flip">Forgot Password?</label>
        </div>
        <div class="Button-box">
          <input class="Login-button" id="btnLogin" type="submit" value='LOG IN' />
        </div>
      </div>
    </div>

  </form>

  <form class="Reset" action="/reset" method="post" id="formReset">
    <div class="Reset-content">
      <div class="Reset-title">Reset Your Password</div>
      <div class="Input-boxes">
        <div class="Input-box">
          <i id="icon-logo" class="Box-i fa-solid fa-envelope"></i>
          <input class="Box-input" id="emailReset" type="email" name="emailReset" autocomplete="email" required="required" autofocus />
          <label for="email" class="Input-label">Enter your Email</label>
        </div>
        <div class="Input-box">
          <i id="icon-logo" class="Box-i fa-solid fa-key"></i>
          <input class="Box-input" name="newPassword" id="newPassword" type="password" autocomplete="false" required="required" readonly onfocus="this.removeAttribute('readonly');" />
          <label for="email" class="Input-label">Enter new Password</label>
          <i id="icon-eye-new" class="Box-i fa-solid fa-eye"></i>
        </div>
        <div class="Input-box">
          <i id="icon-logo" class="Box-i fa-solid fa-key"></i>
          <input class="Box-input" name="repeatPassword" id="repeatPassword" type="password" autocomplete="false" required="required" readonly onfocus="this.removeAttribute('readonly');" />
          <label for="email" class="Input-label">Repear Password</label>
          <i id="icon-eye-repeat" class="Box-i fa-solid fa-eye"></i>
        </div>
        <div class="Input-box">
          <label class="Box-label" for="flip">Login?</label>
        </div>
        <div class="Button-box">
          <input class="Reset-button" id="btnReset" type="submit" value='RESET PASSWORD' />
        </div>
      </div>
    </div>
  </form>
</div>

<link rel="stylesheet" href="../style/login.css">

{{#if alert}}
<script>
  Swal.fire({
    title: '{{alertTitle}}',
    text: '{{alertMessage}}',
    icon: '{{alertIcon}}',
    showConfirmButton: true,
    timer: 1500,
    showCancelButton: false,
    confirmButtonColor: '#3085d6',
    confirmButtonText: 'let`s go there!'
  }).then(() => {
    window.location = '{{ruta}}'
  });
</script>
{{/if}}